<h2>Sign up</h2>



<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email, "Correo" %><br />
  <%= f.email_field :email, :autofocus => true %></div>
  
  <div><%= f.label :creativo, "Creativo" %><br />
  <%= f.check_box :creativo, :autofocus => true %></div>

  <div><%= f.label :problematco, "Problematico" %><br />
  <%= f.check_box :problematico, :autofocus => true %></div>

  <div><%= f.label :password, "Contraseña" %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation, "Confirmar Contraseña" %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

